rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is super admin
    function isSuperAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super-admin';
    }

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read their own user document
      // Super admins can read all users
      allow read: if isOwner(userId) || isSuperAdmin();

      // Users can create their own document
      allow create: if isOwner(userId);

      // Users can update their own document
      // Super admins can update any user (for role changes)
      allow update: if isOwner(userId) || isSuperAdmin();

      // Only super admins can delete users
      allow delete: if isSuperAdmin();
    }

    // Posts collection
    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if isAuthenticated();

      // Authenticated users can create posts
      allow create: if isAuthenticated();

      // Post owners can update their own posts
      // Super admins can update any post
      allow update: if isAuthenticated() &&
                      (isOwner(resource.data.authorId) || isSuperAdmin());

      // Post owners can delete their own posts
      // Super admins can delete any post
      allow delete: if isAuthenticated() &&
                      (isOwner(resource.data.authorId) || isSuperAdmin());

      // Ratings subcollection
      match /ratings/{ratingId} {
        // Anyone can read ratings
        allow read: if isAuthenticated();

        // Users can create/update their own rating (one per user)
        allow create, update: if isAuthenticated() && isOwner(ratingId);

        // Users can delete their own rating
        allow delete: if isAuthenticated() && isOwner(ratingId);
      }
    }

    // Comments collection
    match /comments/{commentId} {
      // Anyone authenticated can read comments
      allow read: if isAuthenticated();

      // Authenticated users can create comments
      allow create: if isAuthenticated();

      // Comment owners can update their own comments
      allow update: if isAuthenticated() && isOwner(resource.data.authorId);

      // Comment owners can delete their own comments
      // Super admins can delete any comment
      allow delete: if isAuthenticated() &&
                      (isOwner(resource.data.authorId) || isSuperAdmin());
    }

    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && isOwner(resource.data.recipientUid);

      // System can create notifications
      allow create: if isAuthenticated();

      // Users can update their own notifications
      allow update: if isAuthenticated() && isOwner(resource.data.recipientUid);

      // Users can delete their own notifications
      allow delete: if isAuthenticated() && isOwner(resource.data.recipientUid);
    }

    // Conversations collection
    match /conversations/{conversationId} {
      // Participants can read their conversations
      allow read: if isAuthenticated() &&
                    request.auth.uid in resource.data.participants;

      // Participants can create conversations
      allow create: if isAuthenticated();

      // Participants can update conversations
      allow update: if isAuthenticated() &&
                      request.auth.uid in resource.data.participants;

      // Participants can delete conversations
      allow delete: if isAuthenticated() &&
                      request.auth.uid in resource.data.participants;
    }

    // Messages collection
    match /messages/{messageId} {
      // Participants can read messages
      allow read: if isAuthenticated();

      // Authenticated users can create messages
      allow create: if isAuthenticated();

      // Message owners can update their messages
      allow update: if isAuthenticated() && isOwner(resource.data.senderId);

      // Message owners can delete their messages
      allow delete: if isAuthenticated() && isOwner(resource.data.senderId);
    }
  }
}
